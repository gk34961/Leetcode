class Solution
{
    //Function to remove a loop in the linked list.
    public static void removeLoop(Node head){
        // code here
        
        Node fast=head;
        Node slow=head;
        
        while(fast!=null && fast.next!=null){
            slow=slow.next;
            fast=fast.next.next;
            if(slow==fast)
                break;
        }
        if(slow==fast){
            slow=head;
                while(slow.next!=fast.next){
                    slow=slow.next;
                    fast=fast.next;
                }
                slow.next=null;
        }
    }
}
